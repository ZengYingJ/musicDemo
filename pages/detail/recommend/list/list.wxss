/* pages/recommend/recommend.wxss */

.title{
    color:white;
    font-size: 37rpx;
    margin:30rpx 0 10rpx 0;
    padding:0 20rpx;
    border-left:3px solid red;
    position: relative;
}
.recommend{
    display: inline-block;
    margin:10rpx 0;
    width:50%;
    height:500rpx;
    overflow: hidden;
}
.recommend > view{
    position: relative;
    margin:auto;
    width:98%;
    height:75%;
}
.recommend image{
    width:100%;
    height:100%;
}
.recommend > text{
    display: block;
    color:white;
    font-size:30rpx;
    margin:20rpx 0;
    padding-left:10rpx;
    width:95%;
    height:25%;
}
.recommend .playCount{
  position: absolute;
  color:white;
  display: flex;
  white-space: nowrap;
  justify-content: right;
  align-items: center;
  font-size: 25rpx;
  top:0;
  padding: 15rpx 10rpx;
  background:linear-gradient(rgba(0,0,0,0.8),transparent);
}
.recommend .playCount > view,.recommend .playCount > test{
  text-align: right;
  margin:0 10rpx;
}
.recommend .user{
  background:linear-gradient(transparent,rgba(0,0,0,0.8));
  display: flex; 
  padding:20rpx 0;
  position: absolute;
  font-size: 28rpx;
  color:rgb(205,205,205);
  bottom: 0px;
}
.recommend .user>text ,.recommend .user>view{
   display: flex;
   align-items: center; 
}
 .recommend .user>.user_avatar{
  width: 50rpx;
  margin:0 10rpx;
  overflow: hidden;
  height: 50rpx;
  border-radius: 50%;
} 