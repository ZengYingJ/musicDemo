/* pages/recommend/recommendDetail/recommendDetail.wxss */
view{
    box-sizing: border-box;
}
.title{
    width:100%;
    background:linear-gradient(rgba(0,0,0,0.7),transparent);
    color:white;
    font-size:35rpx;
    position: absolute;
    top:0;
    text-align: center;
    padding:20rpx 0;
}
.banner{
    width:100%;
    height:400rpx;
    position: relative;
    z-index: -1;
}
.nickName{
    display: block;
    color:white;
    font-size:35rpx;
    padding:10rpx 20rpx;
    position: absolute;
    bottom:0;
    background:linear-gradient(transparent,rgba(0,0,0,0.6));
}
/*歌单简介  */
.intro{
    color:black;
    padding:20rpx;
    background:rgba(255,255,255,0.6);
    font-size:33rpx;
    width:100%;
    overflow: hidden;
}
.container_row{
    display: flex;
    color:white;
    padding:30rpx 20rpx;
    font-size:30rpx;
    border-bottom:1px solid rgba(255,255,255,0.4);
}
.container_row .songName{
    overflow: hidden;
    text-overflow: ellipsis;
    width:600rpx;
    white-space: nowrap; 
    flex:6;
}
.container_row .iconfont{
    flex:1;
    text-align: right;
}
