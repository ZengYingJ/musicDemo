/* pages/singer/listDetail/singerDetail/singerDetail.wxss */
.title{
    width:100%;
    background:linear-gradient(rgba(0,0,0,0.6),transparent);
    color:white;
    font-size:35rpx;
    position: absolute;
    top:0;
    text-align: center;
    padding:30rpx 0;
}
.banner{
    width:100%;
    height:400rpx;
    position: relative;
    z-index: -1;
}
.nickName{
    width: 100%;
    display: block;
    color:white;
    font-size:35rpx;
    padding:10rpx 20rpx;
    position: absolute;
    bottom:0;
    background:linear-gradient(transparent,rgba(0,0,0,0.6));
}

/*歌手简介 */
.intro{
    color:black;
    font-size:35rpx;
    padding:20rpx;
    background:rgba(255,255,255,0.5);
}
.intro view:first-of-type{
    width: 100%;
    overflow: hidden;
    transition:all .5s ease;
}
.intro .introDetail{
    height:50rpx;
}
.intro .iconfont{
    text-align: center;
    margin-top:20rpx;
}

/*歌曲列表  */
.songList{
    padding: 20rpx;
    margin-top:20rpx;
}
.songList .row{
    display: flex;
    margin-bottom: 20rpx;
    background:rgba(0,0,0,0.5);
    padding:10rpx 20rpx;
    border-radius: 10px;
    color:white;
}
.songList .row .iconfont{
    flex:1;
    text-align: right;
    align-self: center;
}
.songList .songname{
    flex:6;
}