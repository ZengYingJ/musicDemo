
.title{
    background:linear-gradient(rgba(0,0,0,0.9),transparent);
    color:white;
    font-size:35rpx;
    position: absolute;
    top:0;
    text-align: center;
     padding:30rpx 0; 
}
.banner{
    /* background:pink; */
    width:100%;
    height:400rpx;
    position: relative;
    z-index: -1;
}
.nickName{
    width: 100%;
    box-sizing: border-box;
    display: block;
    color:white;
    font-size:35rpx;
    padding:10rpx 20rpx;
    position: absolute;
    bottom:0;
    background:linear-gradient(transparent,rgba(0,0,0,0.6));
}

.container_row{
    display: flex;
    color:white;
    padding:30rpx 20rpx;
    font-size:30rpx;
    border-bottom:1px solid rgba(255,255,255,0.4);
}
.container_row .songName{
    overflow: hidden;
    text-overflow: ellipsis;
    width:600rpx;
    white-space: nowrap; 
    flex:6;
}
.container_row .iconfont{
    flex:1;
    text-align: right;
}