/* pages/newSong/newSong.wxss */
swiper{
    width:100%;
    height:300rpx;
}
.slide-image{
    width:100%;
    height:300rpx;
}
.newSong{
    padding:0 20rpx;
}
.newSong_row{
    padding:20rpx 0;
    display: flex;
    border-bottom: 1px solid rgba(255,255,255,0.3);
}
.newSong_row>view{
    flex:8;
}
.newSong_row  text{
    overflow: hidden;
    text-overflow: ellipsis;
    width:600rpx;
    white-space: nowrap;   
    color:white;
    display: block;
    font-size:35rpx;
    margin-bottom:5rpx;
}
.newSong_row text:last-of-type{
    font-size:25rpx;
    color:white;
}
.newSong_row .iconfont{
    flex:1;
    line-height: 80rpx;
    text-align: right;
    color:white;
}

.playSong{
    width:100%;
    height:160rpx;
    position: fixed; 
    bottom: 0px; 
    transform: all 1s ease;
    display: flex;
    background:rgba(0,0,0,0.8);
    color:white;
}
.singerImg{
    flex:2;
    display: flex;
    justify-content: center;
}
.singerImg image{
    align-self: center;
    border-radius: 5px;
    width:90%;
    height:90%;
}
.songInfo{
    flex:4;
    display: flex;
    padding-left:20rpx;
    font-size:30rpx;
    flex-direction: column;
    justify-content: center;
}
.songInfo .authorName{
    color:gray;
    font-size:25rpx;
}
.playSong .btn{
    flex:4;
    display: flex;
    font-size: 33rpx;
    align-self: center;
    justify-content: space-around;
}