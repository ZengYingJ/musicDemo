/* pages/recommendDetail/recommendDetail.wxss */
.container_page{
    position: relative;
    width: 100vw;
    padding-top: 0;
}
.container_page > .header{
    position: relative;
    width: 100%;
}
.container_page > .header > .banner_view{
    position: relative;
    width: 100%;
    height: 400rpx;
}
.container_page > .header > .banner_view > .banner_image{
    position: relative;
    width: 100%;
    height: 100%;
}
.container_page > .header > .banner_view > .banner_text{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    padding: 15rpx 30rpx;
    font-size: 28rpx;
    color: #ffffff;
    background-image: linear-gradient(to top, rgba(39,39,39,.6), transparent);
}
.container_page > .header > .intro_view{
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx;
    font-size: 28rpx;
    background-color: rgba(255,255,255,.6);
    color: #393939;
}
.main{
    position: relative;
    width: 100%;
	box-sizing: border-box;
	padding: 20rpx 0 60rpx;
    margin-top: 20rpx;
}
.main > .card{
    position: relative;
    width: 100%;
}
.main > .card:not(:last-of-type)::after{
    position: absolute;
    content: "";
    left: 25rpx;
    bottom: 0;
    width: calc(100% - 50rpx);
    height: 2rpx;
    background-color: #bababa;
    opacity: .2;
}