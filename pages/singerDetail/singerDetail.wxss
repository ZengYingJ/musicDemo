/* pages/singerDetail/singerDetail.wxss */
.container_page{
    position: relative;
    width: 100vw;
    padding-top: 0;
}
.container_page > .header{
    position: relative;
    width: 100%;
}
.container_page > .header > .banner_image{
    position: relative;
    display: block;
    width: 100%;
    height: 500rpx;
}
.container_page > .header > .intro_text{
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 50rpx;
    font-size: 26rpx;
    letter-spacing: 2rpx;
    line-height: 1.8;
    background-color: #f8f8f8f8;
    color: #272727;
}
.container_page > .header > .intro_text > text{
    position: relative;
    width: 100%;
    transition: all .3s linear;
}
.container_page > .header > .intro_text > .icon_arrow{
    position: relative;
    width: 50rpx;
    height: 50rpx;
    margin-top: 20rpx;
    transform: rotate(180deg);
    transition: all .3s linear;
}
.container_page > .header > .intro_text_ellipsis > text{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.container_page > .header > .intro_text_ellipsis > .icon_arrow{
    transform: rotate(0deg);
}
.main{
    position: relative;
    width: 100%;
    margin-top: 40rpx;
}
.main > .card{
    position: relative;
    width: 100%;
}
.main > .card:not(:last-of-type)::after{
    position: absolute;
    content: "";
    left: 25rpx;
    bottom: 0;
    width: calc(100% - 50rpx);
    height: 2rpx;
    background-color: #bababa;
    opacity: .2;
}