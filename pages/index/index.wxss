
/*主题内容 （推荐歌曲）  */
.container_recommend{
    padding:0px;
    position: absolute;
    top:202rpx;
    transition: all .5s linear;
}
.container_recommend .title{
    color:white;
    font-size: 37rpx;
    margin:30rpx 0 20rpx;
    padding:0 20rpx;
    border-left:3px solid red;
    position: relative;
}
.more{
    font-size:25rpx;
    color:white;
    position: absolute;
    right:20rpx;
    bottom:0;
}
.recommend{
    display: inline-block;
    margin:10rpx 0;
    width:50%;
    height:500rpx;
    overflow: hidden;
}
.recommend > view{
    margin:auto;
    position: relative;
    width:98%;
    height:75%;
}
.recommend image{
    width:100%;
    height:100%;
}
.recommend > text{
    display: block;
    color:white;
    font-size:30rpx;
    margin:20rpx 0;
    padding-left:10rpx;
    width:95%;
    height:25%;
}
.recommend .playCount{
  position: absolute;
  color:white;
  display: flex;
  white-space: nowrap;
  justify-content: right;
  align-items: center;
  font-size: 25rpx;
  top:0;
  padding: 15rpx 10rpx;
  background:linear-gradient(rgba(0,0,0,0.8),transparent);
}
.recommend .playCount > view,.recommend .playCount > test{
  text-align: right;
  margin:0 10rpx;
}
.recommend .user{
  background:linear-gradient(transparent,rgba(0,0,0,0.8)); 
  display: flex; 
  padding:20rpx 0;
  position: absolute;
  font-size: 28rpx;
  color:rgb(205,205,205);
  bottom: 0px;
}
.recommend .user>text ,.recommend .user>view{
   display: flex;
   align-items: center; 
}
 .recommend .user>.user_avatar{
  width: 50rpx;
  background:black;
  margin:0 10rpx;
  overflow: hidden;
  height: 50rpx;
  border-radius: 50%;
} 

/*最新音乐*/
.newSong{
    padding:0 20rpx;
}
.newSong_row{
    padding:20rpx 0;
    display: flex;
    border-bottom: 1px solid rgba(255,255,255,0.3);
}
.newSong_row>view{
    flex:8;
}
.newSong_row  text{
    color:white;
    overflow: hidden;
    text-overflow: ellipsis;
    width:600rpx;
    white-space: nowrap;    
    display: block;
    font-size:30rpx;
    margin-bottom:5rpx;
}
.newSong_row text:last-of-type{
    font-size:30rpx;
    color:white;
}
.newSong_row .iconfont{
    flex:1;
    line-height: 80rpx;
    text-align: right;
    color:white;
}

/*歌曲排行*/
.rank_row{
    display: flex;
    padding:20rpx;
}
.rank_img{
    flex:3;
    height:230rpx;
    background:rgb(0,0,0,0.8);
}
.rank_img image{
    width:100%;
    height:100%;
}
.rank_txt{
    flex:5;
    color:white;
    align-self: center;
    padding-left:50rpx;
    font-size:40rpx;
}

/*歌手分类*/
.container_singer{
    margin-top:30rpx;
    padding:20rpx;
    position: absolute;
    top:202rpx;
    transition: all .5s linear;
}
.container_singer .row{
    padding:20rpx;
    margin-bottom:20rpx;
    background:rgba(255,255,255,0.3);
    border-radius: 5px;
    color:white;
    display: flex;
    justify-content: space-between;
}

.container{
    position: absolute;
    top:202rpx;
    transition: all .5s linear;
}