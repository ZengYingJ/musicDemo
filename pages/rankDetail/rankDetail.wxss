/* pages/rankDetail/rankDetail.wxss */
.container_page{
    position: relative;
    width: 100vw;
    padding-top: 0;
}
.container_page > .header{
    position: relative;
    width: 100%;
}
.container_page > .header > .banner_view{
    position: relative;
    width: 100%;
    height: 400rpx;
}
.container_page > .header > .banner_view > .banner_image{
    position: relative;
    width: 100%;
    height: 100%;
}
.container_page > .header > .banner_view > .banner_text{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    box-sizing: border-box;
    padding: 15rpx 30rpx;
    font-size: 28rpx;
    color: #ffffff;
}
.main,
.main > .card{
    position: relative;
    width: 100%;
}
.main{
	box-sizing: border-box;
	padding: 30rpx 0 60rpx;
}
.main > .card:not(:last-of-type)::after{
    position: absolute;
    content: "";
    left: 25rpx;
    bottom: 0;
    width: calc(100% - 50rpx);
    height: 2rpx;
    background-color: #bababa;
    opacity: .2;
}