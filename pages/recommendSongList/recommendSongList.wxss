.container_page{
    position: relative;
    width: 100vw;
}
.container_page > .header{
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx 0;
}
.container_page > .header > .title{
    position: relative;
    padding-left: 40rpx;
    border-left: 6rpx solid red;
    font-size: 32rpx;
    color: #ffffff;
}
.main{
    position: relative;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 40rpx;
}
.main > .card{
    position: relative;
    width: 50%;
    box-sizing: border-box;
    padding: 10rpx;
}