/* components/Song/Song.wxss */
.container{
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 30rpx 100rpx 30rpx 100rpx;
}
.container > .song_view{
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
}
.container > .song_view > .song_text{
    position: relative;
    max-width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 28rpx;
    color: #ffffff;
}
.button_like{
    position: absolute;
    left: 25rpx;
    top: 50%;
    width: 50rpx;
    height: 50rpx;
    transform: translateY(-50%);
}
.button_play{
    position: absolute;
    right: 25rpx;
    top: 50%;
    width: 50rpx;
    height: 50rpx;
    transform: translateY(-50%);
}